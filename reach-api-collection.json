    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact Form",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/contact",
              "host": ["{{base_url}}"],
              "path": ["api", "contact"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "name": "John Doe",
                "email": "john@example.com",
                "phone": "+1234567890",
                "company": "ACME Inc",
                "subject": "Project Inquiry",
                "message": "I would like to discuss a project"
              }
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
